<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    tools:context=".PromotionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:padding="10dp"
            android:text="Promosikan bisnis atau tempat Anda di Explore Ponorogo untuk memperoleh banyak pengunjung. Hubungi kami melalui email untuk mengetahui harga serta tata cara di :"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="yudahhendriawan007@gmail.com" />

            <Button
                android:id="@+id/copy_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_copy" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>